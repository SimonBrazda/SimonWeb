@model EditUserViewModel
@using ExchangeRatesLib
@{
    ViewBag.Title = "Edit User";
}

<h1>@ViewBag.Title</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control col-sm-6">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control col-sm-6" disabled>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control col-sm-6">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DefaultCurrency" class="col-sm-2 col-form-label"></label>
        <select asp-for="DefaultCurrency" asp-items="Html.GetEnumSelectList<CurrencyEnum>()" class="custom-select col-sm-2">
        </select>
        <span asp-validation-for="DefaultCurrency" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="ListUsers">Cancel</a>
        </div>
    </div>

    <div class="card col-sm-4">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-tile">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            @* not done yet *@
            <a class="btn btn-primary" asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@Model.Id">Manage Roles</a>
        </div>
    </div>
</form>